<PaperCard as |card|>
  <PaperForm @onSubmit={{this.logIn}} as |form|>
    <card.content>
      {{#if this.errorMessage}}
        <div
          class="alert alert-danger"
          role="alert"
          data-test-error-message
        >
          {{this.errorMessage}}
        </div>
      {{/if}}
      <div class="form-group">
        <label for="email-field">Email</label>
        <Input
          @value={{this.email}}
          type="email"
          id="email-field"
          class="form-control"
        />
      </div>
      <div class="form-group">
        <label for="password-field">Password</label>
        <Input
          @value={{this.password}}
          type="password"
          id="password-field"
          class="form-control"
        />
      </div>
    </card.content>
    <card.actions>
      <form.submit-button
        @raised="true"
        @primary={{true}}
      >
        Log In
      </form.submit-button>
    </card.actions>
  </PaperForm>
</PaperCard>
