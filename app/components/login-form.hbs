<PaperCard as |card|>
  <PaperForm @onSubmit={{this.logIn}} as |form|>
    <card.content>
      {{#if this.errorMessage}}
        <div
          class="alert alert-danger"
          role="alert"
          data-test-error-message
        >
          {{this.errorMessage}}
        </div>
      {{/if}}
      <form.input
        @type="email"
        @block={{true}}
        @label="Email"
        @value={{this.email}}
        @onChange={{action (mut this.email)}}
        @required={{true}}
      />
      <form.input
        @type="password"
        @block={{true}}
        @label="Password"
        @value={{this.password}}
        @onChange={{action (mut this.password)}}
        @required={{true}}
      />
    </card.content>
    <card.actions>
      <form.submit-button
        @raised="true"
        @primary={{true}}
      >
        Log In
      </form.submit-button>
    </card.actions>
  </PaperForm>
</PaperCard>
