<PaperCard as |card|>
  <form {{on "submit" this.logIn}}>
    <card.content>
      {{#if this.errorMessage}}
        <div
          class="alert alert-danger"
          role="alert"
          data-test-error-message
        >
          {{this.errorMessage}}
        </div>
      {{/if}}
      <div class="form-group">
        <label for="email-field">Email</label>
        <Input
          @value={{this.email}}
          type="email"
          id="email-field"
          class="form-control"
        />
      </div>
      <div class="form-group">
        <label for="password-field">Password</label>
        <Input
          @value={{this.password}}
          type="password"
          id="password-field"
          class="form-control"
        />
      </div>
    </card.content>
    <card.actions>
      <button
        type="submit"
        class="btn btn-primary"
      >
        Log In
      </button>
    </card.actions>
  </form>
</PaperCard>
