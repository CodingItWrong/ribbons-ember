<div class="card">
  <form {{on "submit" this.logIn}}>
    <div class="card-body">
      {{#if this.errorMessage}}
        <div
          class="alert alert-danger"
          role="alert"
          data-test-error-message
        >
          {{this.errorMessage}}
        </div>
      {{/if}}
      <div class="form-group">
        <label for="email-field">Email</label>
        <Input
          @type="email"
          @value={{this.email}}
          id="email-field"
          class="form-control"
        />
      </div>
      <div class="form-group">
        <label for="password-field">Password</label>
        <Input
          @type="password"
          @value={{this.password}}
          id="password-field"
          class="form-control"
        />
      </div>
      <div class="d-flex justify-content-end">
        <button
          type="submit"
          class="btn btn-primary"
        >
          Log In
        </button>
      </div>
    </div>
  </form>
</div>
