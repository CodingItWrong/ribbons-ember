<PaperCard as |card|>
  <card.content @class="layout-column layout-align-center-center">
    <ReadingControl
      @reading={{@reading}}
      @onComplete={{@onComplete}}
      as |control|
    >
      {{#if @reading.allChaptersRead}}
        <p>You finished</p>
        <h2 data-test-finished>{{@reading.book.name}}</h2>
        <PaperButton
          @raised={{true}}
          @primary={{true}}
          @onClick={{control.markComplete}}
          data-test-mark-complete-button
        >
          Mark
          {{@reading.book.name}}
          Completed
        </PaperButton>
      {{else}}
        <p>Next up to read:</p>
        <div
          class="layout-column layout-align-center-center"
          data-test-next-chapter
        >
          <h2>{{@reading.book.nameForChapter}}</h2>
          <h1>{{control.chapterToRead}}</h1>
        </div>
        <PaperButton
          @raised={{true}}
          @primary={{true}}
          @onClick={{control.markNextChapterRead}}
          data-test-read-button
        >
          Mark Chapter Read
        </PaperButton>
      {{/if}}
    </ReadingControl>
  </card.content>
</PaperCard>
