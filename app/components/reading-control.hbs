{{#if @table}}
  <PaperItem as |controls|>
    <p>
      {{#if @reading.allChaptersRead}}
        {{@reading.book.name}}
      {{else}}
        {{@reading.book.nameForChapter}}
        {{this.chapterToRead}}
      {{/if}}
    </p>
    <PaperDivider />
    <div class="md-secondary-container">
      {{#if @reading.allChaptersRead}}
        <controls.button
          @raised={{true}}
          @primary={{true}}
          @onClick={{this.markComplete}}
        >
          Complete
        </controls.button>
      {{else}}
        <controls.button
          @raised={{true}}
          @primary={{true}}
          @onClick={{this.markNextChapterRead}}
        >
          Read
        </controls.button>
      {{/if}}
    </div>
  </PaperItem>
{{else}}
  {{#if @reading.allChaptersRead}}
    <p>You finished</p>
    <h2 data-test-finished>{{@reading.book.name}}</h2>
    <PaperButton
      @raised={{true}}
      @primary={{true}}
      @onClick={{this.markComplete}}
    >
      Mark
      {{@reading.book.name}}
      Completed
    </PaperButton>
  {{else}}
    <p>Next up to read:</p>
    <div data-test-next-chapter>
      <h2>{{@reading.book.nameForChapter}}</h2>
      <h1>{{this.chapterToRead}}</h1>
    </div>
    <PaperButton
      @raised={{true}}
      @primary={{true}}
      @onClick={{this.markNextChapterRead}}
      data-test-read-button
    >
      Mark Chapter Read
    </PaperButton>
  {{/if}}
{{/if}}
