<PaperCard as |card|>
  <PaperToolbar>
    <PaperToolbarTools>
      <h2>Start Reading</h2>
      <span class="flex"></span>
      <PaperButton
        @iconButton={{true}}
        @onClick={{@onClose}}
      >
        {{paper-icon 'clear'}}
      </PaperButton>
    </PaperToolbarTools>
  </PaperToolbar>
  <PaperContent>
    <PaperList>
      {{#each this.sortedBooks as |book|}}
        <BookList::item
          @book={{book}}
          @onChoose={{@onChoose}}
        />
      {{/each}}
    </PaperList>
  </PaperContent>
</PaperCard>
